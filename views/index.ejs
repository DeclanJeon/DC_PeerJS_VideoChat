<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.3/js/bootstrap.min.js"></script>
    <title>WebRTC DC</title>
    <script>
      const ROOM_ID = '<%=roomId %>'
      console.log(ROOM_ID)
    </script>
</head>
<body>
    <div class="header">
        <div class="logo">
          <div class="header__back">
            <i class="fas fa-angle-left"></i>
          </div>
          <h3>Video Chat</h2>
        </div>
      </div>  
      <div class="main">  
      <div class="main__left">
        <div class="videos__group">
          <div id="video-grid">
            
            <div id="remote__video__container">
              
            </div>
          </div>
        </div>
        <div class="options">
          <div class="options__left">
            <div id="muteVideo" class="options__button">
              <i class="fas fa-video"></i>
            </div>
            <div id="muteAudio" class="options__button">
              <i class="fa fa-microphone"></i>
            </div>
            <div id="showChat" class="options__button">
              <i class="fa fa-comment"></i>
            </div>
            <div id="shareScreen" class="options__button">
              <i class="fas fa-share-square"></i>
            </div>
            <label id="shareFile" class="options__button" for="file">
              <i class="fas fa-file"></i>
            </label>
            <div id="subtitle" class="options__button">
              <i class="fas fa-closed-captioning"></i>
            </div>
            <div id="users" class="options__button">
              <i class="fas fa-users"></i>
            </div>
          </div>
          <div class="options__right">
            <div id="inviteButton" class="options__button">
              <i class="fas fa-user-plus"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="main__right">
        <div class="main__header">
          <h2>Chat</h2>
        </div>
        <div class="main__chat_window">
            <div class="messages"></div>
        </div>
        <div class="main__message_container">
          <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
          <div id="send" class="options__button">
            <i class="fa fa-plus" aria-hidden="true"></i>
          </div>
        </div>
      </div>
    </div>
    <script src="video.js"></script>
    <!-- <script src="video2.js"></script> -->
</body>
</html>